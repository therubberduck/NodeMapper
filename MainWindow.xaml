<Window x:Class="NodeMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:graphViewerUi="clr-namespace:NodeMapper.GraphViewerUi"
        xmlns:ui="clr-namespace:NodeMapper.Ui"
        xmlns:uiMain="clr-namespace:NodeMapper.Ui.Main"
        mc:Ignorable="d"
        Title="NodeMapper" Height="800" Width="800" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="FrameworkElement" x:Key="DefaultControl">
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" x:Name="nodePanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <ui:EditableTextBlock x:Name="txtName"
                                      Style="{StaticResource DefaultControl}"
                                      LabelText="_Name:" />
                <ui:EditableTextBlock x:Name="txtDescription"
                                      Style="{StaticResource DefaultControl}"
                                      LabelText="_Description:" />
                <ListView Style="{StaticResource DefaultControl}" x:Name="lstEdges"
                          SelectionMode="Single"
                          SelectionChanged="LstEdges_OnSelectionChanged" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0"
                        Style="{StaticResource DefaultControl}"
                        Click="btnRemoveEdge_Click">
                    Add Edge
                </Button>
                <Button Grid.Column="1" Grid.Row="0"
                        Style="{StaticResource DefaultControl}"
                        Click="btnRemoveEdge_Click">
                    Remove Edge
                </Button>
                <Button Grid.Column="0" Grid.Row="1"
                        Style="{StaticResource DefaultControl}"
                        Click="btnCreateNode_Click">
                    Add Node
                </Button>
                <Button Grid.Column="1" Grid.Row="1"
                        Style="{StaticResource DefaultControl}"
                        Click="btnCreateNode_Click">
                    Remove Node
                </Button>
                <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                        Style="{StaticResource DefaultControl}"
                        Click="btnSave_Click">
                    Save Graph
                </Button>
            </Grid>
        </Grid>

        <graphViewerUi:MyGraphLayoutControl x:Name="graphControl" Grid.Column="1" />
    </Grid>
</Window>